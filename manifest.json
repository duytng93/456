{
    "manifest_version": 3,
    "name": "Text Simplifier for Learning Disabilities",
    "version": "1.0",
    "description": "Simplifies selected text for better comprehension.",
    "permissions": [
      "activeTab",
      "contextMenus",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "https://api.openai.com/v1/chat/completions"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
    
  